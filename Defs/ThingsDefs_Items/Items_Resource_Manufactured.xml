<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>DiamondCut</defName>
    <label>cut diamond</label>
    <description>A diamond that was carefully cut to enhance its beauty. It is very valuable.</description>
    <graphicData>
      <texPath>Items/Resource/Diamond/Cut</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <soundInteract>Silver_Drop</soundInteract>
    <soundDrop>Silver_Drop</soundDrop>
    <stackLimit>75</stackLimit>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>
      <MarketValue>2000</MarketValue>
      <Mass>0.07</Mass>
      <Beauty>10</Beauty>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <WorkToMake>15000</WorkToMake>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <!-- ====== Recipe ====== -->
    <costList>
      <RawDiamond>1</RawDiamond>
    </costList>
    <recipeMaker>
      <workSpeedStat>SculptingSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <recipeUsers>
        <li>TableSculpting</li>
        <li>LaserTableSculpting</li>
      </recipeUsers>
      <researchPrerequisite>CuttingGems</researchPrerequisite>
      <skillRequirements>
				<Crafting>10</Crafting>
        <Artistic>6</Artistic>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedDiamond</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

