    </ThingDef>

  <ThingDef ParentName="Bracelet" Name="GoldBracelet">
    <defName>Jewelry_GoldBracelet</defName>
    <label>gold bracelet</label>
    <description>Worth a lot, and it gives anyone who wears it a bit of extra charm and an extra mood boost.</description>
    <graphicData>
      <texPath>Items/Apparel/Accessories/gold_bracelet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <Mass>0.06</Mass>
      <EquipDelay>0.2</EquipDelay>
      <Beauty>10</Beauty>
      <MarketValue>550</MarketValue>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
    <!-- ===== Recipe ===== -->
    <costList>
      <Gold>10</Gold>
    </costList>
    <recipeMaker>
      <workSpeedStat>SculptingSpeed</workSpeedStat>
      <effectWorking>CutStone</effectWorking>
      <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
      <recipeUsers>
        <li>LaserTableSculpting</li>
      </recipeUsers>
      <researchPrerequisite>JewelryCrafting</researchPrerequisite>
      <workSkill>Artistic</workSkill>
      <skillRequirements>
				<Crafting>5</Crafting>
        <Artistic>5</Artistic>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

