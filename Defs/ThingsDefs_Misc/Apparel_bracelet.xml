    <ThingDef Name="Bracelet" ParentName="ApparelBase" Abstract="True">
      <thingCategories>
        <li>Bracelet</li>
      </thingCategories>
      <apparel>
        <bodyPartGroups>
          <li>LeftHand</li>
        </bodyPartGroups>
        <layers>
