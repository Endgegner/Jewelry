    <ThingDef ParentName="Necklace" Name="DiamondNecklace">
    <defName>Jewelry_DiamondNecklace</defName>
    <label>diamond necklace</label>
    <description>Worth a lot, and it gives anyone who wears it a bit of extra charm and an extra mood boost.</description>
    <graphicData>
      <texPath>Items/Apparel/DNecklace/diamond_necklace</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>0.14</Mass>
      <EquipDelay>0.3</EquipDelay>
      <MarketValue>2500</MarketValue>
      <Beauty>10</Beauty>
      <WorkToMake>10000</WorkToMake>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <!-- ===== Recipe ===== -->
    <costList>
      <DiamondCut>1</DiamondCut>
      <Gold>20</Gold>
    </costList>
    <recipeMaker>
      <workSpeedStat>SculptingSpeed</workSpeedStat>
      <effectWorking>CutStone</effectWorking>
      <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
      <recipeUsers>
        <li>LaserTableSculpting</li>
      </recipeUsers>
      <researchPrerequisite>JewelryCrafting</researchPrerequisite>
      <workSkill>Artistic</workSkill>
      <skillRequirements>
				<Crafting>9</Crafting>
        <Artistic>5</Artistic>
      </skillRequirements>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

