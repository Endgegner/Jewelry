    <ThingDef ParentName="Necklace" Name="DiamondNecklace">
    <defName>Jewelry_DiamondNecklace</defName>
    <label>diamond necklace</label>
    <description>Worth a lot, and it gives anyone who wears it a bit of extra charm and an extra mood boost.</description>
    <graphicData>
      <texPath>Items/Apparel/DNecklace/diamond_necklace</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>0.14</Mass>
      <EquipDelay>0.3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Items/Apparel/DNecklace/DNecklace</wornGraphicPath>
      <layers>
        <li>Accessories</li>
      </layers>
    </apparel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>

